/*******************************
         Site Overrides
*******************************/
@media only screen and (min-width: @mobileBreakpoint) and (max-width: @largestMobileScreen) {
  .ui.padded.segment {
    padding: @mobilePaddedSegmentVertical @mobilePaddedSegmentHorizontal;
  }
  .ui[class*='very padded'].segment {
    padding: @mobileVeryPaddedSegmentVertical @mobileVeryPaddedSegmentHorizontal;
  }
}

.ui.segment.padded {
  > .ui.segment {
    padding: 0;
  }
}
