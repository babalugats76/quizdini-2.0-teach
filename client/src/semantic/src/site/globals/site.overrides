.match-editor {
  position: relative;
}

.toolbar {
  float: right;
}

.format-toolbar {
  position: absolute;
  bottom: 5px;
  right: 5px;
}

.format-toolbar button {
  background-color: white;
  padding: 3px 6px;
  color: #4e4e4e;
  margin-right: 3px;
  border-radius: 3px;
  font-size: 1rem;
}

.format-toolbar button svg {
  fill: #d5d5d5;
}

.format-toolbar button:hover,
.format-toolbar button:focus {
  cursor: pointer;
  background-color: red;
  border-color: #222222;
}

.format-toolbar button:hover svg {
  fill: #222222;
}

.button-toolbar {
  background-color: transparent;
  background-repeat: no-repeat;
  border: none;
  cursor: pointer;
  overflow: hidden;
}

/*#match-bank button.labeled:not(.active):not(:hover) {
  background-color: rgba(40, 40, 40, 0.3) !important;
}*/

.error .label {
  color: red;
}

.input-feedback {
  color: #999;
  margin-top: 0.5rem;
  font-size: 0.9em;
  &.error {
    color: red;
  }
}

.animated {
  animation-duration: 0.3s;
  animation-fill-mode: both;
}

.input-group {
  margin-bottom: 1rem;
}

svg.svg-icon {
  vertical-align: middle;
}

@media only screen and (max-width: 767.99px) {
  #match-table-container {
    margin-top: unset;
  }

  .ui.form {
    .fields {
      > .error {
        margin-bottom: 1.3em !important;
      }

      .field:not(.error) {
        margin-bottom: 1.3em !important;
      }
      /*.ui.input,
      .ui.button,
      .ui.dropdown {
        margin-bottom: 1.3em !important;
      }*/
    }
  }
}

/*-------------------
  Media Queries
--------------------*/

/* Tablets and smaller */

@media only screen and (max-width: @largestMobileScreen) {
  .icon-menu-list {
    &.ui.horizontal.list {
      justify-content: space-evenly;
      > .item {
        margin: 0.5em 0;
      }
    }
  }

  .ui.cards {
    .ui.card {
      &.match-card {
        .content {
          &.match-card-desc {
            .description {
              display: inline-flex;
              flex-wrap: wrap;
              justify-content: space-around;
            }
          }
        }
        .ui.label {
          display: flex;
        }
      }
    }
  }
}
