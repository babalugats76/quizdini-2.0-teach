/*******************************
         Site Overrides
*******************************/

/*-------------------
  Self-Hosted Fonts
--------------------*/

@font-face {
  font-family: 'Lexend Deca';
  font-style: normal;
  font-weight: 400;
  src: local('Lexend Deca Regular'), local('LexendDeca-Regular'),
    url('/fonts/lexend-deca-v1-latin-regular.woff2') format('woff2'),
    /* Chrome 26+, Opera 23+, Firefox 39+ */
      url('/fonts/lexend-deca-v1-latin-regular.woff') format('woff'); /* Chrome 6+, Firefox 3.6+, IE 9+, Safari 5.1+ */
}

@font-face {
  font-family: 'Fira Code';
  font-style: normal;
  font-weight: 400;
  src: local(''), url('/fonts/fira-code-v5-latin-regular.woff2') format('woff2'),
    /* Chrome 26+, Opera 23+, Firefox 39+ */
      url('/fonts/fira-code-v5-latin-regular.woff') format('woff'); /* Chrome 6+, Firefox 3.6+, IE 9+, Safari 5.1+ */
}

@font-face {
  font-family: 'marcher-medium';
  src: url('/fonts/marcher-medium-webfont.woff2') format('woff2'),
    url('/fonts/marcher-medium-webfont.woff') format('woff');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'marcher-extrabolditalic';
  src: url('/fonts/marcher-extrabolditalic-webfont.woff2') format('woff2'),
    url('/fonts/marcher-extrabolditalic-webfont.woff') format('woff');
  font-weight: normal;
  font-style: normal;
}

/*-------------------
  Root Element
--------------------*/

#quizdini {
  height: 100%;
  background-color: @pageBackground;
}

/*-------------------
  Page & Containers
--------------------*/

.pushable {
  overflow-y: hidden;
  .pusher {
    display: flex;
    flex-direction: column;
    height: 100%;
    overflow-y: auto !important;
    > .ui.menu {
      display: flex;
      flex: 0 0 auto;
      &.fixed {
        background-color: rgba(26, 28, 87, 0.9);
      }
    }
    &.menu-fixed {
      > .page-wrapper {
        padding-top: 69px;
      }
    }
    > .page-wrapper {
      display: flex;
      flex: 1 0 auto; /* Make its content grow */
      width: 100%;
      height: auto;
      justify-content: center; /* center the children */
      background-color: @pageBackground;
      > .page {
        margin-top: 2rem;
        margin-bottom: 3rem;
      }
      .ui.container {
        &.small {
          max-width: @smallContainerWidth;
        }
        &.medium {
          max-width: @mediumContainerWidth;
        }
        &.large {
          max-width: @largeContainerWidth;
        }
      }
    }
    > #footer {
      flex: 0 1 auto; /* Makes the footer shrink */
      width: 100%;
      padding: 1rem;
      align-items: center;
      justify-content: center;
      background-color: @secondaryColor;
    }
  }
}

/*-------------------
  Feedback
--------------------*/

.input-feedback {
  margin-top: 0.5rem;
  font-size: 0.9em;
  &.error {
    text-align: left;
    color: @red;
  }
}

.error .label {
  color: @red;
}

/*-------------------
  Loader / Spinner
--------------------*/

.loader {
  position: fixed; /* Takes out of normal page flow */
  z-index: 999;
  height: 2.3rem;
  width: 2.3rem;
  overflow: visible;
  margin: auto; /* Positions in center of page */
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  .icon.spinner {
    width: 2.3rem;
    height: 2.3rem;
    path {
      fill: @quizdiniPurple;
    }
  }
}

.loader {
  -webkit-animation: spin 500ms infinite linear; /* Safari 4+ */
  -moz-animation: spin 500ms infinite linear; /* Fx 5+ */
  -o-animation: spin 500ms infinite linear; /* Opera 12+ */
  animation: spin 500ms infinite linear; /* IE 10+, Fx 29+ */
}

@-moz-keyframes spin {
  from {
    -moz-transform: rotate(0deg);
  }
  to {
    -moz-transform: rotate(360deg);
  }
}
@-webkit-keyframes spin {
  from {
    -webkit-transform: rotate(0deg);
  }
  to {
    -webkit-transform: rotate(360deg);
  }
}
@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/*-------------------
  Icon Menu List
--------------------*/

.icon-menu-list {
  &.ui.selection.list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;

    > .item {
      display: inline-flex;
      flex-direction: row;
      align-items: center;
      background-color: none;
      padding: 0.5em 1em;
      margin: 0 1em 0.5em 0;
      border-radius: 0.3em;
      > .ui.avatar.image svg path {
        fill: @veryStrongTransparentBlack;
      }
      > .content {
        color: @veryStrongTransparentBlack;
        > .header {
          color: @veryStrongTransparentBlack;
        }
      }
    }

    > .item:hover {
      background: @subtleTransparentBlack;
    }

    > .item.active {
      background: @white;
      border: 1px solid @veryStrongTransparentBlack;
      > .ui.avatar.image svg path {
        fill: @black;
      }
      > .content {
        color: @black;
        > .header {
          color: @black;
        }
      }
    }
  }

  &.ui.horizontal.list:not(.celled) {
    > .item:last-child {
      padding-right: 1em;
      margin-bottom: 0.5em;
    }
  }

  &.ui.horizontal.list {
    > .item:first-child,
    > .item:last-child {
      padding-top: 0.5em;
      padding-bottom: 0.5em;
    }
  }
}

/*-------------------
  Forms
--------------------*/

#account-form > .fields:last-of-type,
#lost-form > .fields:last-of-type,
#login-form > .fields,
#password-form > .fields,
#register-form > .fields:last-of-type,
#reset-form > .fields {
  justify-content: center;
}

#account-form > .fields:last-of-type,
#lost-form > .fields:last-of-type,
#password-form > .fields:last-of-type,
#register-form > .fields:last-of-type,
#reset-form > .fields:last-of-type {
  padding-top: 0.75em;
  padding-bottom: 0;
  margin-bottom: 0;
}

/*-------------------
  About
--------------------*/
#about {
  &.page {
    p {
      > a {
        color: @linkColor;
        &:hover {
          text-decoration: underline;
        }
      }
      > strong {
        font-weight: normal;
        color: @strongColor;
      }
    }

    .ui.huge {
      font-family: @hugeFont;
      font-size: 2.6em;
      text-decoration: underline;
    }

    #team {
      .member-contact {
        a {
          > svg {
            width: 2.2em;
            height: 2.2em;
          }
          &:not(:last-of-type) {
            margin-right: 1%;
          }
        }
      }
    }

    #philosophy {
      .belief {
        img.icon {
          margin-bottom: 1rem; /* use rem because inside element with font-size set */
          &.easel,
          &.pay-to-play {
            height: 125px;
          }
          &.measuring-tape {
            height: 100px;
          }
        }
      }

      .belief:not(:last-child) {
        margin-bottom: 2em;
      }
    }
  }
}

/*-------------------
  Login
--------------------*/
#login-form {
  a {
    &:hover {
      color: @linkColor;
      text-decoration: underline;
    }
  }
  input {
    &#username,
    &#password {
      max-width: 300px;
    }
  }
  > .fields:last-of-type {
    padding-top: 0.75em;
    margin-bottom: 1.25em;
  }
}

a#google-login {
  display: block;
  width: 191px;
  height: 46px;
  margin: 0 auto;
  text-decoration: none;
  color: transparent;
  border: 0;
  outline: none;
  /** TODO - move to cloud and host on S3/Cloud Front
      Use regular, low-fidelity images?
  **/
  background: #ffffff url('/images/btn_google_signin_light_normal_web@2x.png')
    no-repeat;
  background-size: 191px 46px;
  &:focus,
  &:hover {
    background-image: url('/images/btn_google_signin_light_focus_web@2x.png');
  }
  &:active,
  &:visited {
    background-image: url('/images/btn_google_signin_light_pressed_web@2x.png');
  }
}

/*-------------------
  Checkout
--------------------*/

#checkout-form {
  .ui.input {
    height: 43px !important;
  }
  #credit-options {
    margin: 0 0 2em 1em;
  }
  #credit-card {
    &.ui.grid {
      > .row {
        padding-top: 0.5em;
        padding-bottom: 0.7em;
      }
      > .row:last-child {
        margin-top: 0.75rem;
        margin-bottom: 0;
      }
    }
  }
}

/*-------------------
  Profile
--------------------*/

#profile {
  .content-wrapper {
    min-height: 50vh;
  }
  .ui.message {
    margin-bottom: 2em;
  }

  #payments {
    min-height: 330px;
    #payment-table {
      thead > tr > th {
        font-size: 1em;
      }
      tbody > tr > td {
        font-size: 0.9375em;
      }
    }
  }

  #account-summary {
    .ui.items {
      > .item {
        line-height: 1.2;
        font-size: 1.125em;
        > .content {
          > .description {
            margin-top: 0.3em;
            &.username {
              font-size: 1.0625em;
            }
            &.email {
              color: @quizdiniPurple;
            }
          }
          > .extra {
            &.since {
              margin-top: 0.8em;
            }
          }
        }
      }
    }
  }
}

/*-------------------
  Dashboard
--------------------*/

#dashboard {
  .ui.message {
    margin-bottom: 2em;
  }

  #match-game {
    min-height: 330px;
  }

  #dashboard-menu > .item {
    > .image > svg {
      width: 2.5em;
      height: 2.5em;
    }
  }
}

/*-------------------
  Match Cards
--------------------*/

.ui.cards {
  .ui.card {
    &.match-card {
      display: inline-flex !important; /* Allows for controlling vertical growth of card sections, when side by side */
      .content {
        &.match-card-header {
          display: flex;
          position: relative;
          justify-content: center;
          align-items: center;
          min-height: 5em;
          padding: 1em 0.5em 0.5em;
          overflow: hidden;
          border-bottom: 1px solid @subtleTransparentBlack;
          background-size: 25px;
          background-repeat: round;
          background-image: url('/images/question.svg');
          &:hover {
            .ui.icon.button.trash {
              display: block;
              background-color: @negativeBackgroundColor;
              opacity: 0.87;
              svg.icon.trash {
                fill: @negativeColor;
              }
            }
          }
          > .header {
            text-align: center;
            font-size: 1.4em;
            flex-grow: 1;
            padding: 0 0.5em;
          }
          .ui.icon.button.trash {
            opacity: 0;
            position: absolute;
            border-radius: 0;
            top: 0;
            width: 100%;
            height: 100%;
            transition: background-color 0.5s ease;
            background-color: transparent;
            svg.icon.trash {
              fill: @negativeTextColor;
              width: 2em;
              height: 2em;
            }
          }
        }
        &.match-card-desc,
        &.match-card-btns {
          flex-grow: 0;
        }
        &.match-card-desc {
          display: flex;
          justify-content: center;
        }
        &.match-card-btns {
          background-color: @subtleTransparentBlack;
        }
      }

      .ui.label {
        display: inline-flex;
        flex-direction: row;
        align-items: center;
        background-color: transparent !important;
        border: none !important;
        .icon {
          margin-right: 0.75em;
        }
        .detail {
          font-size: 1.25em !important;
          margin-left: unset !important;
          color: @grey;
        }
        svg.icon {
          width: 22px;
          height: 22px;
          fill: @grey;
        }
      }
      .ui.buttons {
        .ui.button:not(:last-child) {
          border-right: 1px inset @black;
        }
      }
    }
  }
}

/*-------------------
  Match
--------------------*/

#match-form {
  .ui.accordion {
    &:not(:last-of-type) {
      margin-bottom: 0.75em;
    }
    .content {
      padding-bottom: 1em;
    }
    .title {
      display: flex;
      flex-direction: row;
      align-items: center;
      :first-child {
        margin-right: 0.3rem;
      }
    }
  }

  .inline.fields {
    justify-content: space-between;
  }

  .match-tip {
    font-size: 0.9em;
    padding-top: 0.6em;
    line-height: 1;
    text-align: left;
    color: @lightGrey;
  }

  #match-id {
    position: absolute;
    bottom: -1rem;
    right: 0;
    color: @lightGrey;
  }
}

#match-table {
  min-height: 550px;
}

/*-------------------
  Icons (Global)
--------------------*/

svg {
  width: 1em;
  height: 1em;

  &.icon {
    &.github {
      path {
        fill: @githubColor;
      }
    }
    &.twitter {
      path {
        fill: @twitterColor;
      }
    }
    &.youtube {
      path {
        fill: @youtubeColor;
      }
    }
    &.linkedin {
      path {
        fill: @linkedInColor;
      }
    }
    &.udemy {
      path {
        fill: @udemyColor;
      }
    }
    &.chevron-down {
      &.open {
        transform: rotate(0deg);
        transition: transform 100ms ease-in-out;
      }
      &.closed {
        transform: rotate(-90deg);
        transition: transform 150ms ease-in-out;
      }
    }
  }
}

.ui.labeled.icon.button > svg {
  &.plus {
    fill: white;
  }
}

svg.icon {
  &.trash {
    width: 18px;
    height: 18px;
    fill: black;
  }

  &.edit,
  &.play,
  &.link {
    width: 23px !important;
    height: 23px !important;
  }

  &.plus {
    fill: white;
  }

  &.tiles,
  &.timer {
    width: 48px !important;
    height: 48px !important;
  }
}

/*-------------------
  Stripe
--------------------*/

.StripeElement {
  height: 43px;
  padding: 0.67857143em 1em;
  border-radius: 4px;
  border: 1px solid rgba(34, 36, 38, 0.15);
}

.StripeElement--invalid {
  background: #fff6f6;
  border-color: #e0b4b4;
}

/*-------------------
  Disposition
--------------------*/

/* TODO - Move this to semantic overrides */
.pusher {
  > .ui.menu {
    border-radius: 0 !important;
    margin: 0 !important;
  }
}

.ui.button {
  &.clipboard {
    transition: color 0.5s ease-in-out,
      background-color 0.5s ease-in-out cubic-bezier(0.175, 0.885, 0.32, 1.275);
    &.copied {
      color: white !important;
      background-color: @green !important;
      font-size: 14px;
      margin: 0;
      padding: 0;
    }
  }
}

.ui.visible.left.overlay.sidebar {
  background-color: #2e3235 !important;
}

.ui.button.trash {
  background-color: pink;
}

.ui.button.trash {
  &:hover {
    background-color: red;
    svg.icon.trash {
      fill: white;
    }
  }
}

svg.icon {
  &.trash {
    width: 18px;
    height: 18px;
    fill: black;
  }

  &.edit,
  &.play,
  &.link {
    width: 23px !important;
    height: 23px !important;
  }

  &.tiles,
  &.timer {
    width: 48px !important;
    height: 48px !important;
  }
}

