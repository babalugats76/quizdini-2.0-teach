/*-------------------
  Media Queries
--------------------*/

@media only screen and (max-width: @largestMobileScreen) {
  .page-wrapper {
    padding: @mobileContainerPadding;
  }

  #about.page {
    .ui.floated.image {
      display: block;
      float: unset;
      margin: 1rem auto 2rem;
    }

    #team {
      .ui.grid.member > .row > .column {
        &.member-title,
        &.member-contact {
          text-align: center;
        }
      }
    }
  }

  .icon-menu-list {
    &.ui.horizontal.list {
      justify-content: space-evenly;
      > .item {
        margin: 0.5em 0;
      }
    }
  }

  .ui.cards {
    .ui.card {
      &.match-card {
        .content {
          &.match-card-desc {
            .description {
              display: inline-flex;
              flex-wrap: wrap;
              justify-content: space-around;
            }
          }
        }
        .ui.label {
          display: flex;
        }
      }
    }
  }
}

@media only screen and (min-width: @tabletBreakpoint) {
  .page-wrapper {
    padding: @containerPadding;
  }

  #about.page #team .ui.grid.member > .row > .column.member-bio > img {
    margin-top: 3em;
  }

  .content-wrapper {
    padding: 0 5%;
  }
}
